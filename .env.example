# Environment Configuration
# Copy this to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zerotouch
DB_USER=postgres
DB_PASSWORD=
DB_POOL_MAX=20

# ===========================================
# API SERVER
# ===========================================
PORT=3000
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGIN=*

# ===========================================
# AI / LLM
# ===========================================
OPENAI_API_KEY=sk-your-openai-key

# ===========================================
# VOICE PROVIDERS (Choose one or more)
# ===========================================

# Vapi.ai (Default)
VAPI_API_KEY=
VAPI_PHONE_NUMBER_ID=
VAPI_ASSISTANT_ID=

# Twilio (Alternative)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===========================================
# MESSAGING PROVIDERS
# ===========================================

# WhatsApp Business API (Default)
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_VERIFY_TOKEN=

# ===========================================
# EMAIL PROVIDERS
# ===========================================

# SendGrid (Default)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Resend (Alternative)
RESEND_API_KEY=

# ===========================================
# E-SIGNATURE PROVIDERS
# ===========================================

# DocuSign (Default)
DOCUSIGN_INTEGRATION_KEY=
DOCUSIGN_SECRET_KEY=
DOCUSIGN_ACCOUNT_ID=
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi

# PandaDoc (Alternative)
PANDADOC_API_KEY=

# ===========================================
# PAYMENT PROVIDERS
# ===========================================

# Stripe (Default)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal (Alternative)
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_SANDBOX=true

# ===========================================
# LANGUAGE DEFAULTS
# ===========================================
DEFAULT_LANGUAGE=en
SECONDARY_LANGUAGE=he
